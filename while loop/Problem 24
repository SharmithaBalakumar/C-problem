#include<stdio.h>
int main() {
    int fuel;
    scanf("%d", &fuel);
    int N;
    scanf("%d", &N);
    int n;
    int i = 0;
    int emergencyStage = -1;
    int fuelwasted = 0;
    while(i < N) {
        scanf("%d", &n);
        fuelwasted = fuel - n;
        fuel = fuelwasted;
        if(fuel < 0 && emergencyStage == -1) {
            emergencyStage = i + 1;   
            fuelwasted = -fuelwasted; 
        }
        if(emergencyStage == -1) {
            fuelwasted = 0;
        }

        i++;
    }

    printf("Emergency Stage: %d\n", emergencyStage);
    printf("Fuel Wasted: %d\n", fuelwasted);

    return 0;
}
