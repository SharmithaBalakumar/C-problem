#include <stdio.h>
int main(){
    int n1;
    scanf("%d",&n1);
    int n2;
    int count=0;
    int maxcount=0;
    while(n1>0){
        scanf("%d",&n2);
        if(n2==1){
            count++;
            if(count>maxcount){
                maxcount=count;
            }
        }
        else if(n2==0){
            count=0;
            
            
        }
        n1--;
    }
    printf("Longest failure streak: %d \n",maxcount);
    return 0;
    
}
