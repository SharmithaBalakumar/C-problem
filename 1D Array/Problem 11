#include<stdio.h>
int main(){
    int size;
    scanf("%d",&size);
    int arr[size];
    for(int i=0;i<size;i++){
        scanf("%d",&arr[i]);
    }
    int total=0;
    for(int i=0;i<size;i++){
        total+=arr[i];
    }
    int left=0;
    for(int i=0;i<size;i++){
        int current=arr[i];
        int leftsum=total-left-current;
        if(left==leftsum){
            printf("%d",i);
            return 0;
            
        }
        left+=current;
        // return 0;
    }
    printf("-1");
    
    return 0;
}
